[org.gnome.desktop.background]
picture-uri='file:///usr/share/backgrounds/deskos/default/deskos.xml'
show-desktop-icons=false

[org.gnome.desktop.screensaver]
picture-uri='file:///usr/share/backgrounds/deskos/default/deskos.xml'

[org.gnome.desktop.interface]
gtk-theme='DeskOS'
icon-theme='DeskOS'
buttons-have-icons=true
menus-have-icons=true
clock-show-date=true

[org.gnome.shell.extensions.user-theme]
name='DeskOS'

[org.gnome.nautilus.desktop]
home-icon-visible=false
trash-icon-visible=false

[org.gnome.nautilus.icon-view]
default-zoom-level='small'

[org.gnome.nautilus.preferences]
always-use-location-entry=true
sort-directories-first=true
executable-text-activation=ask

[org.gnome.desktop.peripherals.touchpad]
scroll-method='two-finger-scrolling'
tap-to-click=true

[org.gnome.shell.clock]
show-date=true

[org.gnome.desktop.privacy]
report-technical-problems=false

[org.gnome.shell]
always-show-log-out=true
favorite-apps=['firefox.desktop', 'thunderbird.desktop', 'libreoffice-writer.desktop', 'gnome-documents.desktop', 'nautilus.desktop']
enabled-extensions=['user-theme@gnome-shell-extensions.gcampax.github.com']

[org.gnome.desktop.wm.preferences]
theme='DeskOS'
button-layout=':maximize,close'

[org.virt-manager.virt-manager]
system-tray=true

[org.gnome.desktop.wm.keybindings]
show-desktop=['<Super>D']

[org.gnome.settings-daemon.peripherals.mouse]
locate-pointer=false

[org.gnome.settings-daemon.plugins.xsettings]
antialiasing='rgba'
hinting='slight'
